class Solution:
    def maxOperations(self, nums: List[int], k: int) -> int:
        
        nums.sort()

        left,right=0,len(nums)-1
        ops=0

        while left < right:

            if nums[left]+nums[right]<k:
                left+=1
            elif nums[left]+nums[right]>k:
                right-=1
            else:
                left+=1
                right-=1
                ops+=1
        
        return ops
